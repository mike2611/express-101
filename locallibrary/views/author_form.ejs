<%- include('./layout'); %>

<form method="POST" action="">
    <div class="form-group">
        <label for="first_name"> First Name: </label>
        <input id="first_name" type="text" placeholder="First name" 
        name="first_name"  required value="<%= author ? author.first_name  :  '' %>">
        <label for="family_name"> Family Name: </label>
        <input id="family_name" type="text" class="form-control" placeholder="Family name"
        name="family_name" required value="<%= author ? author.family_name : '' %>">
        <label for="date_of_birth"> Date of birth: </label>
        <input id="date_of_birth" type="date" class="form-control" placeholder="date_of_birth"
        value="<%= author ? author.date_of_birth : '' %>">
        <label for="date_of_death"> Date of death: </label>
        <input id="date_of_death" type="date" class="form-control" placeholder="date_of_death"
        value="<%= author ? author.date_of_death : '' %>">
    </div>
    <button class="btn btn-primary" type="submit"> Submit </button>
</form>

<% if(errors) { %>
    <ul>
        <% errors.forEach((error) => { %>
            <li>
                <%= error.msg %>
            </li>
        <%});%>
    </ul>
<% } %>