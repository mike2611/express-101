<%- include('./layout'); %>

<div class="col-sm-10">
    <h1> 
        <%= title %>
    </h1>   

    <ul>
        <% if(book_list) { %>
            <% book_list.forEach((book, i) => { %>
                <li>
                    <a href="<%= book.url %>">
                        <%= book.title %>
                    </a>
                    | (<%= book.author.name %>)
                </li>
            <% }); %>
        <% } else { %>
            <li>There are no books. </li>
        <% } %>
    </ul>
</div>
