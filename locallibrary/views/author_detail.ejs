<%- include('./layout'); %>

<h1>
    Author:  <%= author.name %>
</h1>
<p>
    <%= author.date_of_birth %> - <%= author.date_of_death %>
</p>

<div style="margin-left: 20px; margin-top: 20px">
    <h4>
        Books
    </h4>
    <dl>
        <% if(author_books.length) { %>
            <% author_books.forEach((book) => { %>
                <dt>
                    <a href="<%= book.url %>"> <%= book.title %></a>
                </dt>
                <dd>
                    <%= book.summary %>
                </dd>
            <% }); %>
        <% } else { %>
            <p>
                This author has no books.
            </p>
        <% } %>
    </dl>
</div>